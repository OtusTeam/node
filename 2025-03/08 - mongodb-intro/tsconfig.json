{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "./src",
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }