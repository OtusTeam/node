{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
